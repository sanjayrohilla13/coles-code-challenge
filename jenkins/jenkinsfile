def STAGES_TO_RUN = params.stages

pipeline {
    agent any
    parameters {
        string(name: 'env', defaultValue: 'dev', description: 'Environment')
        string(name: 'branch', defaultValue: 'master', description: 'Enter the Git Branch for deploy')
        choice(name: 'stages', choices: ['plan', 'apply', 'destroy-plan', 'destroy'])
    }

    environment {
        AWS_DEFAULT_REGION = 'ap-southeast-2'
    }

    stages {
        stage('GIT Pull') {
            steps {
                echo 'Downloading..'
                script {
                    git credentialsId: 'sanjayrohilla13', branch: 'master', url: 'https://github.com/sanjayrohilla13/coles-code-challenge.git', poll: false
                }
            }
        }

// Deploy Plan Stage
        stage('Deploy Plan') {
            when{
                expression{ STAGES_TO_RUN.contains('plan')}
            }
            steps {
                withCredentials([aws(accessKeyVariable:'AWS_ACCESS_KEY_ID',credentialsId:'jenkins-aws-user',secretKeyVariable:'AWS_SECRET_ACCESS_KEY')]) {
                echo 'Deployment Plan'
                sh '''
                    cd terraform/domain/dev-app
                    terraform init
                    terraform plan
                '''
                }    
            }
        }

// Deploy Stage
        stage('Deploy') {
            when{
                expression{ STAGES_TO_RUN.contains('apply')}
            }
            steps {
                withCredentials([aws(accessKeyVariable:'AWS_ACCESS_KEY_ID',credentialsId:'jenkins-aws-user',secretKeyVariable:'AWS_SECRET_ACCESS_KEY')]) {
                echo 'Deployment'
                sh '''
                    cd terraform/domain/dev-app
                    terraform plan
                    terraform apply --auto-approve
                '''
                }    
            }
        }

// Destroy Plan Stage
        stage('Destroy Plan') {
            when{
                expression{ STAGES_TO_RUN.contains('destroy-plan')}
            }
            steps {
                withCredentials([aws(accessKeyVariable:'AWS_ACCESS_KEY_ID',credentialsId:'jenkins-aws-user',secretKeyVariable:'AWS_SECRET_ACCESS_KEY')]) {
                echo 'Deployment Plan'
                sh '''
                    cd terraform/domain/dev-app
                    terraform init
                    terraform plan --destroy
                '''
                }    
            }
        }

// Destroy Stage
        stage('Destroy') {
            when{
                expression{ STAGES_TO_RUN.contains('destroy')}
            }
            steps {
                withCredentials([aws(accessKeyVariable:'AWS_ACCESS_KEY_ID',credentialsId:'jenkins-aws-user',secretKeyVariable:'AWS_SECRET_ACCESS_KEY')]) {
                echo 'Infrastructure Destroy'
                sh '''
                    cd terraform/domain/dev-app
                    terraform plan -destroy
                    terraform destroy --auto-approve
                '''
                }    
            }
        }
    }
}