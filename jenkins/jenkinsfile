pipeline {
    agent any
    environment {
        AWS_DEFAULT_REGION = 'ap-southeast-2'
    }

    stages {
        stage('Download GIT Hub Repo') {
            steps {
                echo 'Downloading..'
                script {
                    git credentialsId: 'sanjayrohilla13', branch: 'master', url: 'https://github.com/sanjayrohilla13/coles-code-challenge.git', poll: false
                }
            }
        }

        // Login in AWS ECR for getting Authentication Token
        stage('Docker Login') {
            steps {
                withCredentials([aws(accessKeyVariable:'AWS_ACCESS_KEY_ID',credentialsId:'jenkins-aws-user',secretKeyVariable:'AWS_SECRET_ACCESS_KEY')]) {
                // some block
                //sh 'make docker-login'
                echo 'Logging in..'
                sh '''
                    aws s3 ls
                '''
                }    
            }
        }

        stage('Pull ECR Image') {
            steps {
                echo 'Pushing to ECR....'
                sh '''
                    echo "Pull Stage Completed"
                '''
            }
        }
    }
}